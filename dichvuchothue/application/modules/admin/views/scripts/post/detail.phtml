            v = v.replace(a, 'xxxxxxxx');
            v = v.replace(b, a);
            v = v.replace('xxxxxxxx', b);
            $('#media').val(v);
        }

        function destroy(el, a){
            var a = $(el).parents('tr').find('img').attr('src');
            
            $(el).parents('tr').remove();
            
            var v = $('#media').val();
            v = v.replace(a, '');
            $('#media').val(v);
        }
