                    <?php if($value['category']['name'] == 'TIN_TUC'): ?>
                        <?php echo $this->render('post/custom/tin-tuc-short.phtml');?>
                    <?php endif;?>
            
                <?php endforeach;?>
            
                <?php if(strpos($this->post['category'], 'TIN_TUC') != false && strpos($this->post['category'], 'MAIN_PAGE') != false): ?>
                    <?php echo $this->render('post/custom/tin-tuc-full.phtml');?>
                <?php endif;?>
