                <?php $value = $this->categories[0]; ?>
                
                <?php $this->paramCategory = $value['category']; ?>
                <?php $this->paramPosts = $value['posts']; ?>
            
                <?php if($value['category']['name'] == 'TIN_TUC'): ?>
                    <?php echo $this->render('post/custom/tin-tuc-full.phtml');?>
